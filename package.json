{
  "name": "fluent-gen-ts",
  "version": "0.1.28",
  "type": "module",
  "description": "Generate type-safe fluent builders for TypeScript interfaces and types",
  "main": "./dist/lib.js",
  "module": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "bin": {
    "fluent-gen-ts": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/lib.js"
    },
    "./cli": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "pnpm run generate:embedded && pnpm run build:lib && pnpm run build:cli",
    "build:lib": "rolldown -c rolldown.lib.config.ts",
    "build:cli": "rolldown -c rolldown.config.ts",
    "generate:embedded": "node scripts/generate-embedded-content.js",
    "typecheck": "pnpm run generate:embedded && tsc --noEmit",
    "lint": "oxlint . --type-aware --fix",
    "test": "vitest run",
    "test:unit": "vitest run --exclude 'src/__tests__/**'",
    "test:e2e": "vitest run src/__tests__/",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev",
    "docs:build": "vitepress build",
    "docs:preview": "vitepress preview",
    "prepublishOnly": "pnpm run typecheck && pnpm run test && pnpm run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish",
    "prepare": "husky"
  },
  "keywords": [
    "fluent",
    "builder",
    "typescript",
    "codegen",
    "code generation",
    "ts-morph"
  ],
  "author": "Rafael Campos <campos.rb@hotmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.8.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafbcampos/fluent-gen-ts.git"
  },
  "bugs": {
    "url": "https://github.com/rafbcampos/fluent-gen-ts/issues"
  },
  "homepage": "https://github.com/rafbcampos/fluent-gen-ts#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "provenance": true
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/inquirer": "9.0.9",
    "@types/node": "24.10.0",
    "@vitest/coverage-v8": "3.2.4",
    "execa": "9.6.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.6",
    "oxlint": "1.25.0",
    "oxlint-tsgolint": "^0.4.0",
    "prettier": "3.6.2",
    "rolldown": "1.0.0-beta.45",
    "rolldown-plugin-dts": "0.17.3",
    "typescript": "5.9.3",
    "vitepress": "2.0.0-alpha.12",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "chalk": "5.6.2",
    "commander": "14.0.2",
    "cosmiconfig": "9.0.0",
    "fast-glob": "3.3.3",
    "glob": "11.0.3",
    "inquirer": "12.10.0",
    "minimatch": "10.1.1",
    "ora": "9.0.0",
    "ts-morph": "27.0.2",
    "tsx": "^4.20.6",
    "zod": "4.1.12"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --write",
      "oxlint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
